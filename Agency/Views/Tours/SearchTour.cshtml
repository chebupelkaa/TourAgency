@model List<ModelTour>


<div class="row row-cols-1 row-cols-md-3 g-4" > 
    @foreach (var tour in Model)
    {
      <div class="col">
        <div class="card h-100">
          <img src="/images/@(tour.Pictures).jpg" class="card-img-top" alt="Tour Image">
          <div class="card-body">
            <h5 class="card-title">@tour.DepartureCountry -> @tour.ArrivalCountry</h5>
            <p class="card-text">
                @Html.Raw(tour.Description.Length > 100 ? tour.Description.Substring(0, 100) + "..." : tour.Description)
            </p>
          </div>
          <div class="card-footer">
            <small class="text-muted">
                <a href="@Url.Action("Details", "Tours", tour)" class="btn btn-outline-info">Подробнее</a>
            </small>
          </div>
        </div>
      </div>
    }

</div>







