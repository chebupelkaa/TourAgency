@model ModelUserForSignIn


<div >
    <div class="col-md-5 offset-md-4 ml-auto mt-5">
        <form method="get" asp-controller="Accounts" asp-action="LogIn" class="form-register">
            <h2 style="padding-left:80px">Авторизация</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                    <label asp-for="Email" class="labelForReg" >Email:</label>
                    <input asp-for="Email" class="form-control" id="inputRegId" placeholder="Почта"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="labelForReg" >Пароль:</label>
                    <input asp-for="Password" class="form-control" id="inputRegId" placeholder="пароль"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <a href='@Url.Action("Register", "Accounts")' class="btn btn-danger" style="margin-left:80px;">К регистрации</a>
                    <button type="submit" class="btn btn-primary">Войти</button>      
                </div>
        </form>
    </div>
</div>