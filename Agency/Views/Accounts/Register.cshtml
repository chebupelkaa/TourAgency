@model ModelUserForSignUp

<div >
    <div class="col-md-5 offset-md-4 ml-auto mt-5">
        <form method="post" asp-controller="Accounts" asp-action="Register" class="form-register">
            <h2>Регистрация</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Surname" class="labelForReg">Имя:</label>
                    <input asp-for="Surname" class="form-control" id="inputRegId"  placeholder="Имя" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Phone" class="labelForReg">Телефон:</label>
                    <input asp-for="Phone" class="form-control" id="inputRegId"  placeholder="номер телефона" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="labelForReg" >Email:</label>
                    <input asp-for="Email" class="form-control" id="inputRegId" placeholder="Почта"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="labelForReg" >Пароль:</label>
                    <input asp-for="Password" class="form-control" id="inputRegId"  placeholder="********"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="labelForReg" >Повторите пароль:</label>
                    <input asp-for="ConfirmPassword" class="form-control" id="inputRegId"  placeholder="********" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <a href="@Url.Action("LogIn", "Accounts")" class="btn btn-danger" style="margin-left:80px;"> Войти в аккаунт</a>
                    <button type="submit" class="btn btn-primary">Зарегистрироваться</button>      
                </div>
        </form>
     </div>
 </div>
